/* 
 * This method prints a triangle of asterisks in this way. 
 *//*
 *//**
 *//***
 */
 
 
class Triangle1{


  void printTriangle1(int n){
  
      if(n > 0){
     
	        for (int i = 1; i <= n; i++){
		          for (int x = 0; x < i; x++){
			            cout << "*";
		          }     
		        cout << endl;
	        }
          
      } // end if
      
  }


};




